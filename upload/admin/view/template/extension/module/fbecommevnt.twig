{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-fbecommevnt" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <button type="submit" form="form-fbecommevnt" data-toggle="tooltip" onclick="$('#svsty').val(1);" title="Save & Stay" class="btn btn-primary">Save & Stay</button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a> {{ text_extension_doc }} </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if(error_warning) %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-fbecommevnt" class="form-horizontal">
          <input type="hidden"  name="svsty" id="svsty" />
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
             <li><a href="#tab-language" data-toggle="tab">{{ tab_language }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group">
                 <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="module_fbecommevnt_status" id="input-mainstatus" class="form-control">
                    {% if(module_fbecommevnt_status) %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <ul class="nav nav-tabs" id="storetab">
                {% for store in stores %}
                <li><a href="#tab-{{ store['store_id'] }}" data-toggle="tab">{{ store['name'] }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">
                {% for store in stores %}
                <div class="tab-pane" id="tab-{{ store['store_id'] }}">
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ store['name'] }} {{ tab_store }} {{ entry_status }}</label>
                    <div class="col-sm-10">
                      <input type="radio" value="1" name="module_fbecommevnt_sts{{ store['store_id'] }}" {% if(module_fbecommevnt_sts[store['store_id']] == 1) %}checked{% endif %}>
                      {{ text_enabled }}&nbsp;&nbsp;
                      <input type="radio" value="0" name="module_fbecommevnt_sts{{ store['store_id'] }}" {% if(module_fbecommevnt_sts[store['store_id']] == 0) %}checked{% endif %}>
                      {{ text_disabled }} </div>
                  </div>
				  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-fb_pixel_id">{{ entry_fb_pixel_id }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="module_fbecommevnt_fb_pixel_id{{ store['store_id'] }}" id="input-fb_pixel_id" value="{{ module_fbecommevnt_fb_pixel_id[store['store_id']] }}" class="form-control" />
                    </div>
                  </div>
				  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-fb_product_catalog_id">{{ entry_fb_product_catalog_id }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="module_fbecommevnt_fb_product_catalog_id{{ store['store_id'] }}" id="input-fb_product_catalog_id" value="{{ module_fbecommevnt_fb_product_catalog_id[store['store_id']] }}" class="form-control" />
                    </div>
                  </div>
				</div>
            {% endfor %}
           </div>
		  </div>
            <div class="tab-pane" id="tab-language">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language['language_id'] }}" data-toggle="tab"><img src="{{ language['imgsrc'] }}" /> {{ language['name'] }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">
                {% for language in languages %}
                <div class="tab-pane" id="language{{ language['language_id'] }}">
				  {% for lng in lang %}
                  <div class="form-group">
                    <label class="col-sm-2 control-label">{{ entrylang[lng] }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="module_fbecommevnt_lang[{{ lng }}][{{ language['language_id'] }}]" value="{{ module_fbecommevnt_lang[lng][language['language_id']] }}" placeholder="{{ entrylang[lng] }}" class="form-control" />
                    </div>
                  </div>
                  {% endfor %}
                </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#storetab a:first').tab('show');
$('#language a:first').tab('show');
//--></script>
{{ footer }}