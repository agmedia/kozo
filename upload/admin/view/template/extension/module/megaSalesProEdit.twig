    #ui-datepicker-div {
      background: white;
      padding: 8px;
      border: 1px solid #eee;
    }

    #ui-datepicker-div th, #ui-datepicker-div td {
      padding: 3px;
    }

    .ui-datepicker-next { margin-left: 10px; } 

    .list-container {
        height: 150px;
        overflow-y: scroll;
        border: 1px solid #eee;
        padding: 4px;
        width: 50%;
    }

    .top-pad {
      padding-top: 15px;
      padding-left: 15px;
    }
  </style>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}